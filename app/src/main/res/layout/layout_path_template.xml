<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="70dp"
		android:layout_margin="20dp">
	
	<ImageView
			android:id="@+id/btn_traffic_icon"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:background="@drawable/btn_bus"
			android:layout_margin="15dp"
			android:layout_alignParentTop="true"
			android:layout_centerVertical="true"/>
	
	<RelativeLayout
			android:id="@+id/layout_paths"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_toEndOf="@+id/btn_traffic_icon"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp">
		
		<TextView
				android:id="@+id/txt_use_path"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:text="덕수궁 함녕전"
				android:textSize="8pt"
				android:textColor="#000000"/>
		
		<TextView
				android:id="@+id/txt_footfall_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:text="약 10걸음 후 도착"
				android:textSize="8pt"
				android:textColor="#000000"/>
	</RelativeLayout>


</RelativeLayout>

