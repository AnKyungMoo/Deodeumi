<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="@drawable/dialog_shape">
	
	<TextView
			android:id="@+id/txt_center_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="서울 시각장애인 생활이동지원센터"
			android:textSize="20sp"
			android:textColor="#555353"
			android:layout_marginTop="20dp"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="50dp"
			android:layout_marginBottom="10dp"/>
	<LinearLayout
			android:id="@+id/layout_line"
			android:layout_width="280dp"
			android:layout_height="0.2dp"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/txt_center_name"
			android:background="#707070"/>
	
	<TextView
			android:id="@+id/txt_center_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="02-2092-0000"
			android:textSize="30sp"
			android:textColor="#555353"
			android:layout_marginTop="10dp"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="30dp"
			android:layout_below="@id/layout_line"/>
	
	<Button
			android:id="@+id/btn_call"
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:background="@drawable/button_radius"
			android:text="전화"
			android:textStyle="bold"
			android:textColor="#ffffff"
			android:textSize="20sp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="30dp"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/layout_line"/>

</RelativeLayout>